# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4096

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/chatcanvas?schema=public

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=phc_your-posthog-project-key-here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
POSTHOG_API_KEY=phx_your-posthog-personal-api-key-here

# Feature Flags
FEATURE_FLAGS={"streaming_enabled":true,"analytics_enabled":true,"multi_model_support":true}
NEXT_PUBLIC_FEATURE_FLAGS={"new_ui":false,"beta_features":false}

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Optional: Logging
LOG_LEVEL=info
