# LLM Provider Configuration
LLM_PROVIDER=openai  # Options: openai, anthropic (default: openai)

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini  # or gpt-4o, gpt-4-turbo, etc.

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022  # or claude-3-opus, etc.

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/chatcanvas?schema=public

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=phc_your-posthog-project-key-here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
POSTHOG_API_KEY=phx_your-posthog-personal-api-key-here

# Feature Flags (comma-separated list)
# Available flags: templates, darkMode, analytics, export
# Example: FEATURE_FLAGS=templates,darkMode,analytics
FEATURE_FLAGS=templates,darkMode

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Optional: Logging
LOG_LEVEL=info
